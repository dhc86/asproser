<%= simple_form_for @product do |f| %>
  <%= select_tag(:category_id, options_for_select(@categories), :prompt => "Select a category") %>
  <%= f.input :title, label: "Name of Product" %>
  <%= f.input :description, label: "Small Description" %>
  <%= f.input :url, label: "URL - Link to Product" %>
  <%= f.button :submit %>
<% end %>
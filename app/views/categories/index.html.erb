<header id="myCarousel" class="carousel slide">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <img src="assets/gray.jpg" alt="redcar" class="img-responsive">
            <div class="carousel-caption">
              <h2>Caption 3</h2>
            </div>
        </div>
        <div class="item">
            <img src="assets/helmet.jpg" alt="redcar" class="img-responsive"> 
            <div class="carousel-caption">
              <h2>Caption 3</h2>
            </div>
        </div>
        <div class="item">
            <img src="assets/angry.jpg" alt="redcar" class="img-responsive"> 
            <div class="carousel-caption">
              <h2>Caption 3</h2>
            </div>
        </div>
    </div>


   <a class="left carousel-control" href="#myCarousel" data-slide="prev">
    <span class="icon-prev"></span>
  </a>
  <a class="right carousel-control" href="#myCarousel" data-slide="next">
    <span class="icon-next"></span>
  </a>
</header>

<h1> Categories General - index - </h1>
<% if @categories.count == 0 %>
  <p>There are no Categories to display. Please enter a new category!</p>

<% else %>

<% @categories.each do |category|  %>
  <a href="/categories/<%= category.id %>"><%= image_tag category.category_image.url(:category_index) %></a> 
  <h2><%= link_to category.name, category_path(category) %></h2>
  <% end  %>
<% end %>

<%= link_to "Add Category", new_category_path %>













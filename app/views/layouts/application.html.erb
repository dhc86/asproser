<!DOCTYPE html>
<html>
<head>
  <title>Solo Shoppers</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>



  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>




<!-- Navigation -->
<nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
  <div class="container">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header" style="height:60px;">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>
          <a class="navbar-brand" href="/">
            <img alt="Brand" src="assets/new-logo.png" >
          </a>
    </div>
    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in?%>
           
            <li>
              <%= link_to "Subcribers", subscribers_path %>
            </li>
            <li>
              <%= link_to "Add Product", new_product_path %>
            </li>
            <li>
              <%= link_to "Add Category", new_category_path %>
            </li>
          <% end %>
             <li>
              <%= link_to "Free Products", freeproducts_path %>
            </li>
            <li>
              <%= link_to "Products", products_path %>
            </li>
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Categories <b class="caret"></b></a>
                <ul class="dropdown-menu">
                <% Category.all.each do |category|%>
                    <li>
                        <%= link_to category.name, category_path(category) %>
                    </li>
                <% end %>
                </ul>
            </li>
            <% if user_signed_in? %>
              <li>
                <%= link_to "Log out", destroy_user_session_path, method: :delete %>
              </li>
            <% else %>
              <li>
                <%= link_to "Log In", new_user_session_path %>
              </li>
            <% end %>
        </ul>
    </div>
      <!-- /.navbar-collapse -->
  </div>
  <!-- /.container -->
</nav>

    


  
<%= yield %>


<br>
<br>

     <!-- Footer -->
<footer class="dark-footer text-center">
    <div class="row">
      <div class="col-lg-12">
          <p>Copyright &copy; Asproser 2016 - SⓄLⓄ SHⓄPPERS</p>
      </div>
    </div>
</footer>




</body>

</html>
